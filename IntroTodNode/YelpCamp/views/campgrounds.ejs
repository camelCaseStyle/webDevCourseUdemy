<% include partials/header%>

<div class = "container">
    <header class="jumbotron">
        <h1>Welcome to Campgrounds!</h1>
        <p>View our handpicked campgrounds from all over the world</p>
        <p>
            <a type="button" class="btn btn-primary btn-lg" href="campgrounds/new">Add new campground</a>
        </p>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap:wrap">
        <div class="col-lg-12">
            <h3>Our most popular campsites</h3>
        </div>
       
            <% campGrounds.forEach(function(camp){ %>
                <div class="col-md-3 col-sm-6">
                       
                    
                <div class="thumbnail">
                        <img src= "<%=camp.url%>">
                        <div clas="caption">
                                <h4><%=camp.name%></h4>
                        </div>
                </div>
                </div>
                
            <% }); %>
        
    </div>
    
</div>
<% include partials/footer%>